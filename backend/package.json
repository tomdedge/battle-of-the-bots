{
  "name": "auraflow-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "migrate": "node db/migrate.js",
    "migrate-old": "node migrate.js",
    "test-messages": "node test_new_messages.js",
    "install-tts": "echo 'Installing Python dependencies...' && pip3 install -r requirements.txt && echo 'edge-tts installed successfully!' || (echo 'ERROR: Python dependencies installation failed. Try: pip3 install edge-tts' && exit 0)",
    "postinstall": "npm run install-tts"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "googleapis": "^161.0.0",
    "jsonwebtoken": "^9.0.3",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
